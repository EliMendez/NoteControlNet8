@{
    ViewData["Title"] = "Subject";
}
@model List<NoteControlNet8.Models.Subject>;

@section Breadcrumbs {
    <div class="pagetitle">
        <h1>Subject</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li class="breadcrumb-item active">Subject</li>
            </ol>
        </nav>
    </div>
}

<div class="row">
    <div class="offset-12">
        <div class="card">
            <div class="card-header">Subject</div>
            <div class="card-body">
                <div class="row">
                    <div class="offset-9 col-3 mb-3 mt-3">
                        <a class="btn btn-primary d-block mx-auto btn-sm">New subject</a>
                    </div>
                </div>
                <div class="row">
                    @if (Model.Count() > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-sm" id="tblSubject" width="100%">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Code</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Code</td>
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td>
                                                <a class="btn btn-secondary btn-sm">Edit</a>
                                                <a class="btn btn-danger btn-sm">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center mt-3" role="alert">
                            There are no subject results.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tblSubject').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "No data available in table",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Show _MENU_ entries",
                    "loadingRecords": "Loading...",
                    "processing": "Processing...",
                    "search": "Search:",
                    "zeroRecords": "No matching records found",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    },
                }
            });
        });
    </script>
}